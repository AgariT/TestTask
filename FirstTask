$a = 5; // элемент, который нужно вставить
$found = false; // флаг для проверки наличия цифры 2
for ($i = 0; $i < count($array); $i++) {
    if (strpos($array[$i], '2') !== false) {
        $found = true;
        $index = $i;
    }
    if ($found && $i > $index) {
        $array[$i+1] = $array[$i];
    }
    if ($found && $i == $index+1) {
        $array[$i+1] = $array[$i];
        $array[$i] = $a;
    }
}
